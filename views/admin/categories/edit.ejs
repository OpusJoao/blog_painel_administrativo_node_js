<div class="container">
  <hr />
  <div class="card">
      <div class="card-header">
        <h2>Edição de categoria</h2>
      </div>
      <div class="card-body">
        <form action="<%=ROUTES.CATEGORY.EDIT.SAVE%>" method="post">
            <input
              class="form-control"
              type="text"
              name="title"
              value="<%=category.title%>"
              placeholder="Defina o titulo da categoria"
              id="title"
            />   
            <input type="hidden" name="id" value="<%=category.id%>">   
      </div>
      <div class="card-footer">
          <button class="btn btn-success">Atualizar</button>
      </div>
    </form>
  </div>
</div>
